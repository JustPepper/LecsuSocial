			text-align center
			line-height 25px
			margin 0 5px
			display block
		a
			color #333
	&-input
		margin-top 5px
		flex-wrap wrap
		justify-content flex-end
		form
			width 100%
		label
			size(100%, 28px)
			position relative
			display block
			svg
				size(22px)
