@import 'styl/*'
@import 'lib/*'

reset()
box-reset()

/* Variables */

border-color = rgba(#333, .10)
azul = #0D4284

#svg
	display none
	
.wrapper
	max-width 1080px
	margin 0 auto
	height 100%
	position relative
	
.flex
	display flex

.small-image
	size(35px)
	border-radius 3px
	background-size cover
	background-position center
	background-repeat no-repeat
	@media screen and (min-width: 768px)
		size(45px)

.rd
	border-radius 3px

.btn
	border 0
	border-radius 3px
	font-family 'Roboto', sans-serif

.btn-blue
	color white
	background azul

.btn-white
	border 1px solid border-color
	color rgba(#333, .75)

a
	text-decoration none
	
/*
 * Header Styles 
*/
header
	size(100%, 50px)
	border-bottom 1px solid border-color
	position fixed
	top 0
	background white
	z-index 999
	.flex
		justify-content space-between
		align-items center
	.home-url
		height 100%
		padding 10px
		.hdr-logo
			size(50px, 22px)
			text-align center
			@media screen and (min-width: 600px)
				width 114px
			img
				height 100%
	.hdr-menu
		nav
			ul
				display flex
				li
					border-right 1px solid border-color
					padding 0 10px
					&:last-child
						border-right 0
					a
						font-family: 'Oxygen', sans-serif;
						color #333
						font-weight 500
						font-size 14px
						display block
						small
							display inline-block
							background azul
							circle(18px)
							color white
							font-size 11px
							line-height 18px
							text-align center
	.hdr-nav
		flex-wrap wrap
		padding 0 10px
		position relative
		.medium-image
			size(22px)
		.medium-image-active
			&:before
				content ''
				position absolute
				bottom -20px
				right 2px
				size(0)
				border-left 8px solid transparent
				border-right 8px solid transparent
				border-bottom 8px solid azul
		.header-user
			flex-wrap wrap
			position relative
			cursor pointer
			user-select: none;
			nav
				width 150px
				position absolute
				top 40px
				left 0
				background azul
				border-radius 3px
				border 1px solid 
				border-color azul azul rgba(#333, .25) azul 
				display none
				ul
					padding 10px 0
					li
						line-height 28px
						font-family 'Oxygen'
						font-size 12px
						margin-bottom 5px
						&:last-child
							margin-bottom 0
						a
							color white
							padding 0 15px
							display flex
							align-items center
							svg
								size(12px)
								fill white
								margin-right 10px
		&-username
			font-family: 'Oxygen', sans-serif;
			font-weight 700
			font-size 14px
			display none
			color rgba(#333, .75)
			@media screen and (min-width: 768px)
				display flex
				align-items center
		&-icon
			size(22px)
			svg
				size(100%)
				fill border-color
		&-credits
		&-notifications
			size(auto, 28px)
			padding 0 5px
			color azul
			display flex
			justify-content center
			align-items center
			font-family: 'Oxygen', sans-serif;
			font-weight 500
			font-size 12px
			position relative
			user-select: none;
			svg
				fill rgba(#333, .50)
				size(18px)
			small
				color rgba(#333, .50)
				margin-left 5px
		&-notifications
			flex-wrap wrap
			position static
			cursor pointer
			overflow hidden
			.notifications
				position absolute
				width 100%
				top 43px
				left 0
				background white
				border 1px solid
				border-color azul border-color rgba(#333, .25) border-color
				display none
				z-index 999
				h1
					line-height 28px
					width 100%
					text-align center
					background azul
					color white
				ul
					li
						padding 15px
						border-bottom 1px solid rgba(#333, .10)
						&:last-child
							border-bottom 0
						&:hover
							background border-color
						a
							color azul
							display flex
							justify-content space-between
							align-items center
							.small-image
								size(25px)
							.not-text
								width calc(100% -  35px)
								font-size 12px
								small
									font-family 'Oxygen'
									margin 0 0 5px 0
									display block
									font-weight 700
									color #333
								time
									font-family 'Roboto'
									color rgba(#333, .50)
									font-weight 400
			
		.notifications-active
			svg
				fill azul
			&:before
				content ''
				width: 0; 
				height: 0; 
				border-left: 8px solid transparent;
				border-right: 8px solid transparent;
				border-bottom: 8px solid azul;
				position absolute
				top 36px
		.line
			border-left 1px solid rgba(#333, .10)
			margin 0 10px
			height 22px
		&-menu
			width 200px
			position absolute
			top 55px
			right 5px
			text-align right
			border 1px solid border-color
			background white
			z-index 999
			display none
			animation-duration 250ms
			li
				height 50px
				line-height 50px
				a
					color #333
					font-size 14px
					display flex
					justify-content flex-start
					i
						size(35px, 50px)
						display flex
						justify-content center
						align-items center
						svg
							size(16px)
							fill rgba(#333, .75)
					
/*
 * Aside Styles
*/

.change-photo
	size(100%)
	display flex
	flex-wrap wrap
	justify-content center
	align-items flex-end
	form
		display flex
		justify-content flex-end
		width 100%
	&-upload
		display flex
		justify-content center
		width 100%
		button
			cursor pointer
			outline 0
			background azul
			border 0
			border-radius 3px
			padding 0 10px
			color white
			font-family 'Open Sans'
		label
			display flex
			cursor pointer
			padding 10px
			input[type="file"]
				display none
			svg
				size(28px)
				fill rgba(white, .75)
.site
	flex-wrap wrap
	padding 10px
	margin-top 50px
	@media screen and (min-width: 960px)
		flex-wrap nowrap
	aside
	main
		width 100%
	aside
		@media screen and (min-width: 960px)
			width 250px
		.profile-picture
			size(100%, 250px)
			background-size cover
			background-position center
			background-repeat no-repeat
			margin-bottom 10px
			position relative
			@media screen and (min-width: 480px)
				height 320px
			@media screen and (min-width: 600px)
				size(49%, auto)
				display inline-block
				margin-bottom 0
			@media screen and (min-width: 768px)
				width 300px
			@media screen and (min-width: 960px)
				width 250px
				height 250px
				margin-bottom 10px
		.medium-wrapper
			@media screen and (min-width: 600px)
				width 49%
				display inline-block
				vertical-align top
				margin-left 5px
			@media screen and (min-width: 768px)
				width calc(100% - 310px)
			@media screen and (min-width: 960px)
				width 250px
				margin-left 0
				display block
	.aside-right
		@media screen and (min-width: 600px)
			display flex
			flex-wrap wrap
			align-items flex-start
			justify-content space-between
		@media screen and (min-width: 960px)
			display block
		.asd-item
			@media screen and (min-width: 600px)
				width 49%
				&:nth-child(1)
					order 1
				&:nth-child(2)
					order 4
				&:nth-child(3)
					order 3
				&:nth-child(4)
					order 2
			@media screen and (min-width: 960px)
				width auto
				padding 10px
	.aside-left
		@media screen and (min-width: 600px)
			display flex
			margin-bottom 10px
		@media screen and (min-width: 960px)
			flex-wrap wrap
					
