			select 
				size(100%)
				border 1px solid
				border-color border-color border-color rgba(#333, .25) border-color
				appearance none
				font-family 'Oxygen'
				font-size 12px
				color #333
				border-radius 3px
				outline 0
		input
			margin-top 5px
