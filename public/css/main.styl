	&-select
		margin-top 10px
		label
			width 75px
			font-family 'Roboto'
			line-height 1.3
			font-size 14px
			@media screen and (min-width: 960px)
				font-size 12px
		select
			size(100px, 40px)
			margin-right 10px
	/* Currently reading */
	.reading-hover
		size(100%, 200px)
		background-size cover
		display flex
		flex-wrap wrap
		justify-content center
		align-items flex-end
		a
			background white
			padding 0 10px
			line-height 28px
			border-radius 3px
			border 1px solid
			color #333
			font-family 'Oxygen'
			font-size 14px
			border-color border-color border-color rgba(#333, .75) border-color
			margin-bottom 10px	
	/* Code */
	.code
		text-align center
		color #333
		small
		span
			display block
		small
			font-family 'Roboto', sans-serif
			font-weight 300
			margin-bottom 10px
		span
			font-family: 'Open Sans', sans-serif;
			color azul
			font-weight 700
		&-span
			margin-bottom 10px
			
.currently-reading
	padding 0 !important
	
.network
	width 100% !important
	display block
